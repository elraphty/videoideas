<% include ../partials/header.ejs %>

<% if(errors) {%>
  <% errors.forEach(function(err){ %>
    <div class="alert alert-danger"><%= err.text %></div>
  <% }); %>
<% }else{ %>
<%  }%>

<div class="card card-body">
  <h3>Edit Idea</h3>
  <form  method="POST" action="/ideas/edit/<%= idea._id %>?_method=PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" placeholder="Enter Video Title" value="<%= idea.title %>" required>
    </div>

    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" placeholder="Enter Video Details"  required><%= idea.details %></textarea>
    </div>
    <center><button type="submit" class="btn btn-primary">Edit <i class="fa fa-send"></i></button></center>
  </form>
</div>

<% include ../partials/footer.ejs %>